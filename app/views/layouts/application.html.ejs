<%
var url = request.url
  , siteName = 'Hairstrike: 80s hair metal band'
  , title = siteName
  , description = "Hairstrike is an 80s hair metal band (i.e., tribute band, cover band) playing in the San Francisco Bay Area. Performing songs by Poison, Scorpions, Twisted Sister, Bon Jovi, Def Leppard, Dokken, Journey, Poison, Warrant, Ozzy Osbourne, Scorpions, Motley Crue, Poison, Kiss, Bon Jovi, Dokken, Motley Crue, Ratt, Skid Row, Guns N' Roses, Warrant, Ozzy, Kiss."

if (url != '/') {
  title += ' -- ' + navs[url];
}
-%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title; %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:titleâ€ content="<%= title; %>"/>
    <meta property="og:type" content="band"/>
    <meta property="og:url" content="http://hairstrike.com<%= url %>"/>
    <meta property="og:image" content="http://hairstrike.com/img/hairstrike_logo2.png"/>
    <meta property="og:site_name" content="<%= siteName; %>"/>
    <meta property="og:description" content="<%- description %>"/>
    <meta name="description" content="<%- description %>"/>
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" media="screen">
    <link href="/css/bootstrap.responsive.css" rel="stylesheet" type="text/css">
    <link href="/css/base.css" rel="stylesheet" type="text/css" />
  </head>

  <body class="hairstrike">
    <div class="banner">
      <a class="logo hidden-phone" href="/">
        <img src="/img/hairstrike_logo2.png"
            width="609" height="49" alt="Hairstrike logo" />
      </a>
      <a class="logo-phone visible-phone" href="/">
        <img src="/img/hairstrike_logo2_sm.png"
            width="304" height="23" alt="Hairstrike logo" />
      </a>
    </div>
    <ul class="nav">
      <% for (var p in navs) { %>
      <li>
        <a href="<%= p %>"><%= navs[p].toLowerCase(); %></a>
      </li>
      <% } %>
    </ul>

    <div class="content container">
      <div class="row">
        <div class="span1"></div>
        <div class="span10">
          <%- yield(); %>
        </div>
        <div class="span1"></div>
      </div>
    </div>
  </body>

</html>
